---
    import { COLORS } from '../../design.config'
    import MainLayout from '../../layouts/MainLayout.astro'

    const content = {
        headers: {
            "idk": "idk",
        }
    }
---
    <MainLayout {content}>
    <h2 class="text-xl font-medium">Colors</h2>

    <h3 class="text-lg font-medium mt-12 mb-4">Gray</h3>
    <div class="grid grid-cols-5 gap-4">
    {COLORS.gray.map(({ name, value }) => (
            <div class="flex flex-col items-center">
        <div class="w-24 h-16">
          <div class="w-full h-full rounded-md border border-slate-300" style={'background: ' + value}></div>
        </div>
        <pre>{`${name}`}</pre>
      </div>
    ))}
    </div>
    <h3 class="text-lg font-medium mt-12 mb-4">Blue</h3>
    <div class="grid grid-cols-5 gap-4">
    {COLORS.blue.map(({ name, value }) => (
            <div class="flex flex-col items-center">
        <div class="w-24 h-16">
          <div class="w-full h-full rounded-md border border-slate-300" style={'background: ' + value}></div>
        </div>
        <pre>{`${name}`}</pre>
      </div>
    ))}
    </div>
    </MainLayout>