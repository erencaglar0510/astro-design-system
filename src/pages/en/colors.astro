---
    import { COLORS } from '../../design.config'
    import MainLayout from '../../layouts/MainLayout.astro'

    const colorNames = Object.keys(COLORS)
---
    <MainLayout>
    <h1>Colors</h1>

    <div class="flex flex-col space-y-12">
    {colorNames.map(name => (
        <div>
            <h3 class="capitalize">{name}</h3>
            <div class="grid grid-cols-5 gap-4">{
                COLORS[name].map(color => (
                    <div>
                        <div class="h-12 rounded-md hover:ring transition-all" style={`background: ${color.value}`}></div>
                        <div class="text-sm flex justify-between font-mono text-slate-500">
                            <span>{color.name}</span>
                            <span class="uppercase">{color.value}</span>
                        </div>
                    </div>
                ))            
            }</div>
        </div>
    ))}
    </div>




