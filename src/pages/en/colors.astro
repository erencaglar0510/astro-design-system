---
    import { COLORS } from '../../design.config'
    import MainLayout from '../../layouts/MainLayout.astro'

    const colorNames = Object.keys(COLORS)
---
    <MainLayout>
    <h2 class="text-xl font-medium">Colors</h2>

    {colorNames.map(name => (
        <h3 class="text-lg my-4 capitalize font-medium text-slate-900">{name}</h3>
        <div class="grid grid-cols-5 gap-4">{
            COLORS[name].map(color => (
                <div>
                    <div class="w-24 h-12 rounded-md" style={`background: ${color.value}`}></div>
                    <div class="text-sm flex justify-between">
                        <span>{color.name}</span>
                        <span class="uppercase">{color.value}</span>
                    </div>
                </div>
            ))            
        }</div>
    ))}



